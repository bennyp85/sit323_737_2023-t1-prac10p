form.form-inline(action="/post", method="POST")
    label.sr-only(for="num1") Number 1
    .input-group.mb-2.mr-sm-2
        .input-group-prepend
            .input-group-text Number 1
        input#num1.form-control(type="number", name="num1", required="")
    label.sr-only(for="num2") Number 2
    .input-group.mb-2.mr-sm-2
        .input-group-prepend
            .input-group-text Number 2
        input#num2.form-control(type="number", name="num2", required="")
    label.sr-only(for="operation") Operation
    .input-group.mb-2.mr-sm-2
        .input-group-prepend
            .input-group-text Operation
        select#operation.form-control(name="operation", required="")
            option(value="add") Add
            option(value="subtract") Subtract
            option(value="mult") Multiply
            option(value="div") Divide
    button.btn.btn-primary.mb-2(type="submit") Send to Database
